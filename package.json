{
  "name": "website",
  "version": "1.0.0",
  "description": "An example of how to use Payload's localization features",
  "license": "MIT",
  "type": "module",
  "scripts": {
    "build": "cross-env NODE_OPTIONS=--no-deprecation next build",
    "dev": "cross-env NODE_OPTIONS=--no-deprecation next dev",
    "dev:prod": "cross-env NODE_OPTIONS=--no-deprecation rm -rf .next && pnpm build && pnpm start",
    "generate:importmap": "cross-env NODE_OPTIONS=--no-deprecation payload generate:importmap",
    "generate:types": "cross-env NODE_OPTIONS=--no-deprecation payload generate:types",
    "ii": "cross-env NODE_OPTIONS=--no-deprecation pnpm --ignore-workspace install",
    "lint": "cross-env NODE_OPTIONS=--no-deprecation next lint",
    "lint:fix": "cross-env NODE_OPTIONS=--no-deprecation next lint --fix",
    "payload": "cross-env NODE_OPTIONS=--no-deprecation payload",
    "reinstall": "cross-env NODE_OPTIONS=--no-deprecation rm -rf node_modules && rm pnpm-lock.yaml && pnpm --ignore-workspace install",
    "start": "cross-env NODE_OPTIONS=--no-deprecation next start",
    "db:backup": "mkdir -p dataDump && docker compose exec mongo mongodump --out=/data/db/backup && docker compose cp mongo:/data/db/backup ./dataDump",
    "db:backup:gz": "mkdir -p dataDump && docker compose exec mongo sh -c 'mongodump --archive --gzip' > ./dataDump/backup-$(date +%Y%m%d_%H%M%S).gz",
    "db:restore": "docker compose cp ./dataDump/backup mongo:/data/db/backup && docker compose exec mongo mongorestore /data/db/backup",
    "db:restore:gz": "docker compose exec -i mongo sh -c 'mongorestore --archive --gzip' < ./dataDump/backup.gz"
  },
  "dependencies": {
    "@payloadcms/db-mongodb": "latest",
    "@payloadcms/email-resend": "^3.1.0",
    "@payloadcms/live-preview-react": "latest",
    "@payloadcms/next": "^3.47.0",
    "@payloadcms/payload-cloud": "latest",
    "@payloadcms/plugin-cloud-storage": "^3.60.0",
    "@payloadcms/plugin-form-builder": "^3.47.0",
    "@payloadcms/plugin-nested-docs": "^3.47.0",
    "@payloadcms/plugin-redirects": "^3.47.0",
    "@payloadcms/plugin-search": "^3.47.0",
    "@payloadcms/plugin-seo": "^3.47.0",
    "@payloadcms/richtext-lexical": "^3.47.0",
    "@payloadcms/storage-uploadthing": "^3.47.0",
    "@payloadcms/translations": "^3.48.0",
    "@payloadcms/ui": "^3.47.0",
    "@radix-ui/react-accordion": "^1.2.11",
    "@radix-ui/react-checkbox": "^1.0.4",
    "@radix-ui/react-dialog": "^1.1.14",
    "@radix-ui/react-label": "^2.0.2",
    "@radix-ui/react-select": "^2.0.0",
    "@radix-ui/react-slot": "^1.0.2",
    "@radix-ui/react-visually-hidden": "^1.2.3",
    "class-variance-authority": "^0.7.0",
    "clsx": "^2.1.1",
    "cross-env": "^7.0.3",
    "embla-carousel-react": "^8.6.0",
    "express": "^5.1.0",
    "geist": "^1.3.0",
    "graphql": "^16.8.2",
    "jsonwebtoken": "9.0.2",
    "leaflet": "^1.9.4",
    "lenis": "^1.3.8",
    "lucide-react": "^0.378.0",
    "luxon": "^3.7.1",
    "next": "^15.1.0",
    "next-intl": "^3.23.2",
    "payload": "^3.47.0",
    "payload-admin-bar": "^1.0.6",
    "payload-lexical-typography": "^0.5.0",
    "prism-react-renderer": "^2.3.1",
    "react": "^19.0.0",
    "react-dom": "^19.0.0",
    "react-hook-form": "7.45.4",
    "react-leaflet": "^5.0.0",
    "react-live-clock": "^6.1.25",
    "shadcn": "2.3.0",
    "sharp": "0.32.6",
    "tailwind-merge": "^2.6.0",
    "tailwindcss-animate": "^1.0.7",
    "uploadthing": "7.7.3"
  },
  "devDependencies": {
    "@eslint/eslintrc": "^3.2.0",
    "@tailwindcss/typography": "^0.5.13",
    "@types/escape-html": "^1.0.2",
    "@types/jsonwebtoken": "^9.0.6",
    "@types/leaflet": "^1.9.20",
